<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guidance_smartnetworksettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/settings_illust_width_in_landscape"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/smart_connectivity_guide_icn" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.1"
                    android:padding="@dimen/settings_text_padding"
                    android:text="@string/smart_network_settings_desc"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                    android:textStyle="normal" />

                <include
                    android:id="@+id/preference_switch_connected"
                    layout="@layout/preference_switch" />

                <include
                    android:id="@+id/preference_switch_entry"
                    layout="@layout/preference_switch"
                    android:visibility="gone" />

                <include layout="@layout/preference_divider" />

                <include layout="@layout/preference_footer" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
