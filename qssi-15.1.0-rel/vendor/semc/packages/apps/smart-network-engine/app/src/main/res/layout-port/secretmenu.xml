<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeViewParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/relativeDebugViewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/DebugViewTypeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:text="@string/debug_view_status"/>
            <CheckBox
                android:id="@+id/DebugViewCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/DebugViewTypeDescription"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/DebugViewTypeDescription"/>
            <RadioGroup android:id="@+id/RadioGroupDebugViewType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/DebugViewCheckBox"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@+id/DebugViewCheckBox">
                <RadioButton
                    android:id="@+id/RadioButtonDebugViewSimple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simple Mode"/>
                <RadioButton
                    android:id="@+id/RadioButtonDebugViewFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Mode"/>
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
