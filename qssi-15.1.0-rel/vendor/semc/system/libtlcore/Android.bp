cc_library_shared {
    name: "libtlcore",
    compile_multilib: "64",
    system_ext_specific: true,
    recovery_available: true,

    srcs: [
        "src/tlcore_header.c",
        "src/tlcore.c",
        "src/section.c",
        "src/section_header.c",
        "src/section_data.c",
        "src/tlcore_utils.c",
        "src/sha1.c",
    ],
    cflags: [
        "-DDEBUG_LEVEL=0",
    ],
    shared_libs: [
        "liblog",
    ],
    local_include_dirs: [
        "src",
    ],
    header_libs: [
        "libtlcore_headers",
    ],
    export_header_lib_headers: [
        "libtlcore_headers",
    ],
}

cc_library_headers {
    name: "libtlcore_headers",
    recovery_available: true,

    export_include_dirs: [
        ".",
    ],
}
